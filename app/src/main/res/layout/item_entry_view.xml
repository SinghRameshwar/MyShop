<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp"
        android:background="#F4F1F1"
        android:layout_height="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="Add New Item"
            android:textColor="@color/black_d"
            android:textSize="22dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/itemNameE"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="30dp"
            android:hint="Enter Item Name"
            android:textSize="14dp"
            android:textColor="@color/black_d"
            android:background="@drawable/light_container_bg_round"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/itmQtyE"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:hint="Item Qty"
            android:textSize="14dp"
            android:textColor="@color/black_d"
            android:background="@drawable/light_container_bg_round"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/itempriceE"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:hint="Item Price"
            android:inputType="numberDecimal"
            android:textSize="14dp"
            android:textColor="@color/black_d"
            android:background="@drawable/light_container_bg_round"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/itemDescE"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:hint="Item Description"
            android:gravity="start"
            android:textSize="14dp"
            android:textColor="@color/black_d"
            android:background="@drawable/light_container_bg_round"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="51dp">

        <TextView
            android:id="@+id/itmcaclBtn"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn_gerybg"
            android:text="Cancle"
            android:textSize="18dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/itmsaveBtn"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:text="Save"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_height="match_parent"/>

        </LinearLayout>





    </LinearLayout>

</FrameLayout>